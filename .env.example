# Agent Workflow Engine Configuration
# Copy this file to .env and modify as needed

# Application Settings
WORKFLOW_ENGINE_APP_NAME="Agent Workflow Engine"
WORKFLOW_ENGINE_APP_VERSION="1.0.0"
WORKFLOW_ENGINE_DEBUG=false

# Server Settings
WORKFLOW_ENGINE_HOST=0.0.0.0
WORKFLOW_ENGINE_PORT=8000
WORKFLOW_ENGINE_RELOAD=false

# Database Settings
WORKFLOW_ENGINE_DATABASE_URL=sqlite:///./workflow_engine.db
WORKFLOW_ENGINE_DATABASE_ECHO=false
WORKFLOW_ENGINE_DATABASE_POOL_SIZE=5
WORKFLOW_ENGINE_DATABASE_MAX_OVERFLOW=10

# Execution Engine Settings
WORKFLOW_ENGINE_MAX_CONCURRENT_EXECUTIONS=10
WORKFLOW_ENGINE_EXECUTION_TIMEOUT=3600
WORKFLOW_ENGINE_NODE_TIMEOUT=300

# WebSocket Settings
WORKFLOW_ENGINE_WEBSOCKET_PING_INTERVAL=20
WORKFLOW_ENGINE_WEBSOCKET_PING_TIMEOUT=10
WORKFLOW_ENGINE_WEBSOCKET_MAX_CONNECTIONS=100

# Logging Settings
WORKFLOW_ENGINE_LOG_LEVEL=INFO
WORKFLOW_ENGINE_LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
# WORKFLOW_ENGINE_LOG_FILE=/var/log/workflow_engine.log
WORKFLOW_ENGINE_LOG_MAX_SIZE=10485760
WORKFLOW_ENGINE_LOG_BACKUP_COUNT=5

# Health Check Settings
WORKFLOW_ENGINE_HEALTH_CHECK_TIMEOUT=5.0

# Performance Monitoring Settings
WORKFLOW_ENGINE_SLOW_REQUEST_THRESHOLD=5.0
WORKFLOW_ENGINE_ENABLE_PERFORMANCE_MONITORING=true

# Security Settings (comma-separated for lists)
WORKFLOW_ENGINE_CORS_ORIGINS=*
WORKFLOW_ENGINE_CORS_METHODS=GET,POST,PUT,DELETE

# Storage Settings
WORKFLOW_ENGINE_ENABLE_HISTORICAL_DATA_CLEANUP=true
WORKFLOW_ENGINE_HISTORICAL_DATA_RETENTION_DAYS=30

# Example configurations for different environments:

# Development
# WORKFLOW_ENGINE_DEBUG=true
# WORKFLOW_ENGINE_RELOAD=true
# WORKFLOW_ENGINE_LOG_LEVEL=DEBUG
# WORKFLOW_ENGINE_DATABASE_ECHO=true

# Production
# WORKFLOW_ENGINE_DEBUG=false
# WORKFLOW_ENGINE_RELOAD=false
# WORKFLOW_ENGINE_LOG_LEVEL=INFO
# WORKFLOW_ENGINE_DATABASE_URL=postgresql://user:password@localhost/workflow_engine
# WORKFLOW_ENGINE_LOG_FILE=/var/log/workflow_engine.log
# WORKFLOW_ENGINE_CORS_ORIGINS=https://yourdomain.com

# Testing
# WORKFLOW_ENGINE_DATABASE_URL=sqlite:///:memory:
# WORKFLOW_ENGINE_LOG_LEVEL=WARNING
# WORKFLOW_ENGINE_MAX_CONCURRENT_EXECUTIONS=2